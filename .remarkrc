{
  "plugins": [
    "@double-great/remark-lint-alt-text",
    [
      "remark-frontmatter",
      [
        "yaml"
      ]
    ],
    [
      "remark-frontmatter-validator",
      [
        2,
        {
          "optional": {
            "tags": {
              "maxLength": 5,
              "type": "object",
              "oneOf": [
                "CodePen",
                "Sass",
                "Haml",
                "Dribbble",
                "API",
                "Jekyll",
                "Node.js",
                "CSS",
                "animation",
                "writing",
                "AWS",
                "Google Sheets",
                "JavaScript",
                "Ela Conf",
                "jQuery",
                "AngularJS",
                "recipe",
                "Zapier",
                "podcasts",
                "speaking",
                "Glitch",
                "Git",
                "PHP",
                "GitHub",
                "Airtable",
                "Google Docs"
              ]
            },
            "pen": {
              "type": "string",
              "maxLength": "7"
            }
          },
          "required": {
            "image": {
              "match": "^\\d\\d\\d\\d-\\d\\d-\\d\\d-.*.(png|jpg)",
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          }
        }
      ]
    ]
  ]
}
