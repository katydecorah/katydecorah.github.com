{
  "plugins": [
    "@double-great/remark-lint-alt-text",
    [
      "remark-frontmatter",
      [
        "yaml"
      ]
    ],
    [
      "remark-frontmatter-validator",
      [
        2,
        {
          "optional": {
            "tags": {
              "maxLength": 6,
              "type": "object"
            }
          },
          "required": {
            "image": {
              "match": "^\\d\\d\\d\\d-\\d\\d-\\d\\d-.*.(png|jpg)",
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          }
        }
      ]
    ]
  ]
}
